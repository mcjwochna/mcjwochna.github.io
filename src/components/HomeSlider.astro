<style>
    /* Proste animacje wej≈õcia dla tekstu */
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
   .animate-fade-in { animation: fadeInUp 0.8s ease-out forwards; }
   .animate-slide-up { animation: fadeInUp 0.8s ease-out 0.2s forwards; opacity: 0; }
   .animate-fade-in-delay { animation: fadeInUp 0.8s ease-out 0.4s forwards; opacity: 0; }
</style>

<script>
    const slides = document.querySelectorAll('.slide');
    const nextBtn = document.getElementById('next-slide');
    const prevBtn = document.getElementById('prev-slide');
    let currentSlide = 0;

    function updateSlider(newIndex) {
        slides.forEach((slide, i) => {
            const isCurrent = i === newIndex;
            slide.classList.toggle('opacity-100', isCurrent);
            slide.classList.toggle('opacity-0',!isCurrent);
            slide.classList.toggle('pointer-events-none',!isCurrent);
            
            // Opcjonalne: resetowanie animacji tekstu przy zmianie slajdu
            if (isCurrent) {
                const animatedElements = slide.querySelectorAll('[class*="animate-"]');
                animatedElements.forEach(el => {
                    el.style.animation = 'none';
                    el.offsetHeight; /* trigger reflow */
                    el.style.animation = null; 
                });
            }
        });
        currentSlide = newIndex;
    }

    // Event Listeners - tylko manualna nawigacja (Brak setInterval)
    if (nextBtn && prevBtn) {
        nextBtn.addEventListener('click', () => {
            updateSlider((currentSlide + 1) % slides.length);
        });
        
        prevBtn.addEventListener('click', () => {
            updateSlider((currentSlide - 1 + slides.length) % slides.length);
        });
    }
</script>